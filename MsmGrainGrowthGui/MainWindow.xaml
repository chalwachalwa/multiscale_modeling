<Window x:Class="MsmGrainGrowthGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MsmGrainGrowthGui"
        mc:Ignorable="d"
        <Title="Grain Growth Cellural Automata" Height="450" Width="800">

    <StackPanel>
        <DockPanel>

            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar>
                    <Button Command="Open" Content="Open" />
                    <StackPanel Orientation="Horizontal">
                      <Image Source="/icons/diskette.png" />
                      <TextBlock Margin="5,0">Save</TextBlock>
                    </StackPanel>
                </ToolBar>
                <ToolBar>
                    <Button Content="Export to CSV" />
                    <Button Content="Save image" />
                </ToolBar>
            </ToolBarTray>
            <TextBox AcceptsReturn="True" />
        </DockPanel>
    <Grid>
        <Grid.ColumnDefinitions>
			<ColumnDefinition Width="3*" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>
		<Image Grid.Column="0"></Image>
        <StackPanel Grid.Column="1">
            <Label Content="Boundary" />
            <ComboBox>
                <ComboBoxItem IsSelected="True">Absorbing</ComboBoxItem>
                <ComboBoxItem>Periodic</ComboBoxItem>
            </ComboBox>
            <Label Content="Neighborhood" />
            <ComboBox>
                <ComboBoxItem IsSelected="True">von Neumann</ComboBoxItem>
                <ComboBoxItem>Moore</ComboBoxItem>
                <ComboBoxItem>Pentagonal</ComboBoxItem>
                <ComboBoxItem>Hexagonal</ComboBoxItem>
            </ComboBox>
            <Label Content="Colors" />
            <TextBox />
            <Button>Randomize</Button>
            <Button>Next Step</Button>
            <Button>Run</Button>
            <Button>Stop</Button>
           
        </StackPanel>
    </Grid>

    </StackPanel>

</Window>
